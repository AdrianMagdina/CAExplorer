<UserControl x:Class="CAExplorerNamespace.ViewHelp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CAExplorerNamespace"
             mc:Ignorable="d" 
             d:DesignHeight="582" d:DesignWidth="598">
    <Grid Height="578" Width="596">
        <local:ExtendedRichTextBox Margin="1,1,1,75" x:Name="rtbHelp" IsReadOnly="True" DocumentFileName="{Binding Path=HelpDocumentFileName, Mode=OneWay}" VerticalScrollBarVisibility="Auto" />
        <Button Content="Ok" Height="23" HorizontalAlignment="Right" IsCancel="False" Margin="0,532,264,0" Name="btnOk" VerticalAlignment="Top" Width="75" Click="btnOk_Click" IsDefault="True" />
    </Grid>
</UserControl>
